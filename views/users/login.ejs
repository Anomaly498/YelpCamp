<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/login.css">

<div class="container d-flex justify-content-center align-items-center mt-5 mb-5">
    <div class="row w-100 justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-4">
            
            <div class="card shadow-lg overflow-hidden">
                
                <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&auto=format&fit=crop&w=1267&q=80"
                    alt="" class="card-img-top" />

                <div class="card-body p-4">
                    <h3 class="text-center mb-4 fw-bold">Welcome Back</h3>
                    
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label text-muted" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-muted" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-success btn-lg">Login</button>
                        </div>
                    </form>
                </div>
                
                <div class="card-footer text-center py-3 bg-white border-0">
                    <p class="mb-0 text-muted">No account? <a href="/register" class="text-success fw-bold text-decoration-none">Register</a></p>
                </div>

            </div>
        </div>
    </div>
</div>